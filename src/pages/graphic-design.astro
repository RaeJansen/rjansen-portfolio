---
import { base } from "../utils/basePath.js";
import Layout from "../layouts/Layout.astro";
---

<Layout pageTitle="Graphic Design">
  <section class="py-12 space-y-4">
    <h1 class="text-3xl md:text-4xl font-bold">Graphic Design Gallery</h1>
    <p class="text-sm font-semibold uppercase tracking-[0.08em] text-base-content/60">Visuals</p>
    <p class="text-base-content/80 max-w-3xl">
      A snapshot of brand systems, illustrations, and website/app layouts I have created over the last two years.
      All graphics were made using Figma, Adobe Creative Suite, or Affinity Design Tools. Photos in designs are stock or AI generated.
    </p>
  </section>

  <!-- Bday Card Design -->
  <section class="pb-12">
    <div class="columns-1 sm:columns-2 lg:columns-3 gap-4">

      <!-- Evolvr -->
       <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}evolvr-home.png`}
            alt="Graphic collage of interface components"
          />
        </figure>
      </div>

      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}evolvr-buy.png`}
            alt="Graphic collage of interface components"
          />
        </figure>
      </div>

      <!-- FitFramework -->
       <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}ff-dash.png`}
            alt="Custom graphic with layered shapes and gradients"
          />
        </figure>
      </div>
      
      <div class="mb-4 ">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}ff-welcome.png`}
            alt="Custom graphic with layered shapes and gradients"
          />
        </figure>

      </div>

      
      
      <!-- Space Card -->
      <div class="mb-4 ">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}space-card1.png`}
            alt="Custom graphic with layered shapes and gradients"
          />
        </figure>

      </div>

      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}space-card2.png`}
            alt="Custom graphic with layered shapes and gradients"
          />
        </figure>
      </div>

      <!-- Space Wrapping Paper -->
      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-contain"
            src={`${base}space-wrapping-paper.png`}
            alt="Bay Hill Hunks podcast cover illustration"
          />
        </figure>
      </div>

      <!-- Magazine 1 Design -->
      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}mag1.jpg`}
            alt="Graphic collage of interface components"
          />
        </figure>
      </div>

      <!-- Bay Hill Babes -->
      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}graphicd2.png`}
            alt="Graphic collage of interface components"
          />
        </figure>
      </div>

      <!-- Rjansen Logo -->
      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}whtlogo.png`}
            alt="Graphic collage of interface components"
          />
        </figure>
      </div>
      <!-- Monster Wrap -->
      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}monster-wrap.png`}
            alt="Custom graphic with layered shapes and gradients"
          />
        </figure>
      </div>

      <!-- Magazine 2 Design -->
      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}mag2.jpg`}
            alt="Graphic collage of interface components"
          />
        </figure>
      </div>

        <!-- Bravura Logo Concept -->
       <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}bravura-logo-concept.png`}
            alt="Brand moodboard sample"
          />
        </figure>
      </div>
    
      <!-- Bay Hill Hunks -->
      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm bg-base-100 p-4">
          <img
            class="w-full h-full object-contain"
            src={`${base}bay-hill-hunks.svg`}
            alt="Bay Hill Hunks podcast cover illustration"
          />
        </figure>
      </div>

      <!-- Focus Photography Style Guide -->
      <div class="mb-4">
        <figure class="w-full rounded-2xl overflow-hidden border border-base-200 shadow-sm">
          <img
            class="w-full h-full object-cover"
            src={`${base}focus-style-guide.png`}
            alt="Brand moodboard sample"
          />
        </figure>
      </div>

      

     
    </div>
  </section>
</Layout>
