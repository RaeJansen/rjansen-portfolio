---
import { base } from "../utils/basePath.js";
---
<div class="drawer drawer-end">
  <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <!-- Navbar -->
    <div class="navbar bg-base-100/90 w-full border-b border-base-200/80 backdrop-blur supports-[backdrop-filter]:bg-base-100/80 sticky top-0 z-30">
      <div class="container mx-auto px-4 lg:px-12 flex items-center justify-between w-full py-3">
        <div class="text-xl font-semibold tracking-tight">
          <a href={base} class="hover:text-primary transition-colors">
            <h1 class="m-0">Rae Jansen</h1>
          </a>
        </div>
        
        <div class="flex items-center lg:hidden">
          <label for="my-drawer-2" aria-label="open sidebar" class="btn btn-square btn-ghost">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block h-6 w-6 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"
              ></path>
            </svg>
          </label>
        </div>

        <div class="hidden lg:flex items-center">
          <ul class="flex items-center gap-2 text-sm font-semibold text-base-content/80">
            <li>
              <a href={`${base}projects`} class="px-4 py-2 rounded-full hover:bg-base-200/80 hover:text-base-content transition-colors">Projects</a>
            </li>
            <li>
              <a href={`${base}graphic-design`} class="px-4 py-2 rounded-full hover:bg-base-200/80 hover:text-base-content transition-colors">Graphic Design</a>
            </li>
            <li>
              <a href={`${base}about`} class="px-4 py-2 rounded-full hover:bg-base-200/80 hover:text-base-content transition-colors">About</a>
            </li>
            <li>
              <a href={`${base}contact`} class="px-4 py-2 rounded-full hover:bg-base-200/80 hover:text-base-content transition-colors">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- SIDEBAR -->
  <div class="drawer-side">
    <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
    <div class="bg-base-100 min-h-full w-80 p-6 flex flex-col border-l border-base-200">
      <!-- Close button -->
      <div class="flex justify-end mb-4">
  <label
    for="my-drawer-2"
    class="btn btn-sm btn-ghost flex items-center gap-2"
    aria-label="close sidebar"
  >
    <span>Close</span>
    <svg
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      class="w-4 h-4 stroke-current"
    >
      <path
        d="m16 16-4-4m0 0L8 8m4 4 4-4m-4 4-4 4"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
  </label>
</div>

      <ul class="menu flex-1 text-base-content px-1 gap-2">
         <li><a href={`${base}projects`} class="text-lg font-semibold px-3 py-2 rounded-lg hover:bg-base-200/80">Projects</a></li>
         <li><a href={`${base}graphic-design`} class="text-lg font-semibold px-3 py-2 rounded-lg hover:bg-base-200/80">Graphic Design</a></li>
        <li><a href={`${base}about`} class="text-lg font-semibold px-3 py-2 rounded-lg hover:bg-base-200/80">About</a></li>
        <li><a href={`${base}contact`} class="text-lg font-semibold px-3 py-2 rounded-lg hover:bg-base-200/80">Contact</a></li>
      </ul>
    </div>
  </div>
</div>